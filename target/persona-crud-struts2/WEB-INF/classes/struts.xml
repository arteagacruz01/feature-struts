<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 6.0//EN"
  "https://struts.apache.org/dtds/struts-6.0.dtd">
<struts>
  <constant name="struts.devMode" value="false"/>
  <package name="default" extends="struts-default">
    <action name="persona" class="com.example.action.PersonaAction" method="list">
      <result name="success">/WEB-INF/jsp/persona/list.jsp</result>
    </action>

    <action name="persona-create-input" class="com.example.action.PersonaAction" method="createInput">
      <result name="input">/WEB-INF/jsp/persona/form.jsp</result>
    </action>

    <action name="persona-create" class="com.example.action.PersonaAction" method="create">
      <result name="success" type="redirectAction">persona</result>
      <result name="input">/WEB-INF/jsp/persona/form.jsp</result>
    </action>

    <action name="persona-edit-input" class="com.example.action.PersonaAction" method="editInput">
      <result name="input">/WEB-INF/jsp/persona/form.jsp</result>
    </action>

    <action name="persona-update" class="com.example.action.PersonaAction" method="update">
      <result name="success" type="redirectAction">persona</result>
      <result name="input">/WEB-INF/jsp/persona/form.jsp</result>
    </action>

    <action name="persona-delete" class="com.example.action.PersonaAction" method="delete">
      <result name="success" type="redirectAction">persona</result>
    </action>
  </package>
</struts>
